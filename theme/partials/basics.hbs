{{#resume.basics}}
	<header id="header" class="clear">
		{{#location}}
		<section class="location">
			<span class="location">
				<span class="fas fa-location-dot"></span>
				{{#if address}}
				<span class="address">{{address}},</span>
				{{/if}}
				{{#if postalCode}}
				<span class="postalCode">{{postalCode}},</span>
				{{/if}}
				{{#if city}}
				<span class="city">{{city}},</span>
				{{/if}}
				{{#if region}}
				<span class="region">{{region}},</span>
				{{/if}}
				{{#if country}}
				<span class="country">{{country}}</span>
				{{/if}}
				{{#if countryCode}}
				<span class="countryCode">{{countryCode}}</span>
				{{/if}}
			</span>
		</section>
		{{/location}}
		{{#if image}}
		<img class="image" src="{{image}}" alt="{{name}}" />
		<div class="middle">
			<h1 class="name">{{name}}</h1>
			<h2 class="label">{{label}}</h2>
		</div>
		{{else}}
		<div>
			<h1 class="name">{{name}}</h1>
			<h2 class="label">{{label}}</h2>
		</div>
		{{/if}}

		{{#birthDate birth}}
		{{/birthDate}}

		{{#if profiles.length}}
		<div id="profiles">
			{{#if website}}
			<div class="website">
				<span class="fas fa-globe"></span>
				<a class="hide-href-print" target="_blank" target="_blank" href="https://{{website}}">{{website}}</a>
			</div>
			{{/if}}
			{{#if email}}
			<div class="email">
				<span class="far fa-envelope"></span>
				<a class="hide-href-print" href="mailto:{{email}}">{{email}}</a>
			</div>
			{{/if}}
			{{#if phone}}
			<div class="phone">
				<span class="fas fa-mobile-alt"></span>
				<a class="hide-href-print" href="tel:{{phone}}">{{phone}}</a>
			</div>
			{{/if}}
			{{#each profiles}}
			<div class="item">
				{{#if network}}
				<div class="username">
					<span class="fab fa-{{spaceToDash network}} {{spaceToDash network}} social"></span>
					{{#if url}}
					<span class="url">
						<a target="_blank" href="{{url}}">{{username}}</a>
					</span>
					{{else}}
					<span>{{username}}</span>
					{{/if}}
				</div>
				{{/if}}
			</div>
			{{/each}}
		</div>
		{{/if}}
	</header>

	{{#if summary}}
	<section class="section">
		<section class="main-summary">
			<div>{{paragraphSplit summary}}</div>
		</section>
	</section>
	{{/if}}

{{/resume.basics}}
